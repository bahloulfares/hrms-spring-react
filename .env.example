# ============================================================================
# ENVIRONMENT VARIABLES - EXAMPLE
# Copy to .env and fill with your actual values
# NEVER commit .env to version control (add to .gitignore)
# ============================================================================

# JWT Configuration
JWT_SECRET=your-super-secure-256bit-secret-key-here

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/gestionrh?createDatabaseIfNotExist=true&useUnicode=true&characterEncoding=UTF-8&serverTimezone=Africa/Tunis&allowPublicKeyRetrieval=true&sslMode=DISABLED
DB_USER=gestionrh_app
DB_PASSWORD=your-secure-db-password

# Mail Configuration (Gmail App Password)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_EMAIL_FROM=noreply@votreentreprise.com
NOTIFICATION_EMAIL_TO=admin@votreentreprise.com
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK=
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_SMS_WEBHOOK=
NOTIFICATION_SMS_TO=

# Server Configuration
SERVER_PORT=8088

# Logging (PROD: INFO, DEV: DEBUG)
LOG_LEVEL=INFO

# ========================================
# GestionRH Frontend - Environment Variables
# ========================================
# Copy this file to .env.local and configure for your environment

# ========================================
# Backend API Configuration
# ========================================
# URL de l'API backend (REST)
# Development: http://localhost:8088
# Production: https://api.gestionrh.com
VITE_API_URL=http://localhost:8088

# ========================================
# Environment Configuration
# ========================================
# Environment type: development, staging, production
VITE_ENV=development

# ========================================
# WebSocket Configuration (Optional)
# ========================================
# Enable WebSocket for real-time updates (notifications, live updates)
# Values: true, false
# Default: false (uses REST polling fallback)
VITE_WS_ENABLED=false

# WebSocket Server URL (only needed if VITE_WS_ENABLED=true)
# Format: ws://localhost:8088/ws or wss://api.gestionrh.com/ws
VITE_WS_URL=ws://localhost:8088/ws

# ========================================
# Application Configuration
# ========================================
# Application title
VITE_APP_TITLE=GestionRH

# Application version
VITE_APP_VERSION=1.0.0

# ========================================
# Feature Flags
# ========================================
# Enable audit trail feature
VITE_FEATURE_AUDIT_TRAIL=true

# Enable export functionality
VITE_FEATURE_EXPORT=true

# Enable advanced reporting
VITE_FEATURE_ADVANCED_REPORTING=true

# ========================================
# Logging Configuration
# ========================================
# Log level: debug, info, warn, error
VITE_LOG_LEVEL=info

# Enable console logging in development
VITE_DEBUG=false

# ========================================
# Security Configuration
# ========================================
# Maximum number of login attempts
VITE_MAX_LOGIN_ATTEMPTS=5

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# CSRF protection enabled
VITE_CSRF_PROTECTION=true

# ========================================
# Deployment Staging
# ========================================
# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Google Analytics ID (optional)
VITE_GA_ID=

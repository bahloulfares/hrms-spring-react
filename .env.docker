# =======================
# Docker Environment Variables
# =======================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# PostgreSQL Configuration
POSTGRES_DB=gestionrh
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-strong-password-123
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8088
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-use-long-random-string
JWT_EXPIRATION=86400000

# Frontend Configuration
FRONTEND_PORT=3000

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Spring Boot Production Settings
SPRING_PROFILES_ACTIVE=prod
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_FLYWAY_ENABLED=true

# Logging Levels
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_FARES_GESTIONRH=DEBUG

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Application Settings
APP_WORKDAY_HOURS=8
